[Unit]
Description=Bifrost Agent Python Service
After=network.target

[Service]
Type=simple
WorkingDirectory=/opt/bifrost-agent
ExecStart=/usr/bin/python3 /opt/bifrost-agent/bifrost-agent.py
Restart=always
RestartSec=10
Environment="API_ENDPOINT=http://localhost:8080/api/v1/vms"

[Install]
WantedBy=multi-user.target

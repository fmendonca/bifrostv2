# Stage 1: Build React app
FROM registry.access.redhat.com/ubi9/nodejs-18 AS builder

WORKDIR /app
USER 0

# Recebe o argumento de build
ARG REACT_APP_API_URL
ENV REACT_APP_API_URL=${REACT_APP_API_URL:-http://localhost:8080}

# Copia package.json e instala dependências
COPY package.json package-lock.json ./
RUN npm install

# Copia código-fonte restante
COPY . .

# Gera build de produção, usando API configurável via env
RUN echo "Building with REACT_APP_API_URL=${REACT_APP_API_URL}" && npm run build

# Debug opcional: listar build gerado
RUN ls -lh build/

# Stage 2: nginx minimal para servir frontend
FROM registry.access.redhat.com/ubi9/nginx-120

USER 0

# Limpa HTML padrão
RUN rm -rf /usr/share/nginx/html/*

# Copia build gerado do React
COPY --from=builder /app/build/ /usr/share/nginx/html/

# Copia configuração nginx customizada
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Corrige permissões
RUN chmod -R 755 /usr/share/nginx/html

EXPOSE 8080

CMD ["nginx", "-g", "daemon off;"]
